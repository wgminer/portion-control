{
  "name": "Portion Control",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "options_page": "options.html",
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    { 
      "matches": ["http://*/*", "https://*/*"], 
      "css": ["css/inject.css"],
      "js": ["js/inject.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self'"
}