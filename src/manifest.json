{
  "name": "Portion Control",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    { 
      "matches": ["http://*/*"], 
      "js": ["inject.js"] 
    }
  ],
  "browser_action": {
    "default_icon": "img/icon19.png",
    "default_title": "Portion Control",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}