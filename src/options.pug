doctype html
html(lang="en")
    head
        title Options | Portion Control
        link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
        link(href="https://fonts.googleapis.com/css?family=Space+Mono", rel="stylesheet")
        link(rel="stylesheet", href="css/options.css")
        script(src="js/options.js")
    body
        .masthead
            .container Portion Control        
        .options
            h1.options__title Options
            .form-group
                label(for="junk-food") Junk Foods
                textarea#junk-food.form-control(type="text", name="junk-food", rows="5")
            .form-group
                label(for="junk-food") Veggies
                textarea#veggies.form-control(type="text", name="veggies", rows="5")
            .form-group
                label(for="snooze-duration") Snooze Minutes
                input#snooze-duration.form-control(name="snooze-duration", type="number", style="width: 100px;")
            hr
            button.btn.btn-default.js--save Save


            